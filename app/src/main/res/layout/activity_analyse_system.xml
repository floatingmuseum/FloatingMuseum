            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询所有第三方应用" />

        <Button
            android:id="@+id/bt_all_launcher_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询所有带Launcher应用" />

        <Button
            android:id="@+id/bt_all_launcher_system_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询所有带Launcher的系统应用" />

        <Button
            android:id="@+id/bt_all_launcher_third_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询所有带Launcher的第三方应用" />
